@model PagedList.IPagedList<AiCard.Models.UserManageIndexViewModel>
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_LayoutBackground.cshtml";
    var fileUpload = new AiCard.Common.CommModels.FileUpload();
    fileUpload.UseByCkEdit();
}

<nav class="navbar navbar-default">
    <div class="container-fluid">

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href='@Url.Action("Create", "UserManage")'>添加</a></li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <div class="form-group">
                    <input id="txtStart" type="text" class="form-control" placeholder="时间">
                </div>
                <button type="submit" class="btn btn-default">查询</button>
            </form>
        </div>
    </div>
</nav>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>用户名</th>
            <th>角色</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Role</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ID })">编辑</a> |
                    <a href="@Url.Action("Delete", new { id = item.ID })">删除</a>
                </td>
            </tr>
        }
    </tbody>

</table>
@Html.PageList(Model,Url.PageUrl())
@section Scripts{
    @Scripts.Render("~/bundles/userManageIndex")
}
