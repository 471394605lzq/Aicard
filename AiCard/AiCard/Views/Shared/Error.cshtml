@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "错误";
    switch ((AiCard.Layout)ViewBag.Layout)
    {

        default:
        case AiCard.Layout.Manage:
            Layout = "~/Views/Shared/_LayoutBackground.cshtml";
            break;
        case AiCard.Layout.WebSide:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
        case AiCard.Layout.MoblieWebSide:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }

}

<h3 class="text-danger">@ViewBag.Head</h3>
<p class="">@Html.Raw(ViewBag.Message)</p>

