@model AiCard.Models.CommModels.ChinaPCASCom
@{ 
    SelectList province = new SelectList((List<string>)Model.Provincelist, "name");
    SelectList city = new SelectList((List<string>)Model.Citylist, "name");
    SelectList district = new SelectList((List<string>)Model.Districtlist, "name");
}

<div class="form-group">
    @Html.LabelFor(model => model.Province, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Province, province, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Province, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.City, city, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.District, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.District, district, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
    </div>
</div>
@Scripts.Render("~/bundles/comm")
