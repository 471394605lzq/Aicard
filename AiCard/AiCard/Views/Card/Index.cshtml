<table class="table  table-hover table-striped">
    <thead>
        <tr>
            <th>
                所属企业
            </th>
            <th>
                用户账号
            </th>
            <th>
                名片名称
            </th>
            <th>
                头像
            </th>
            <th>
                座机
            </th>
            <th>
                邮箱
            </th>
            <th>
                微信号
            </th>
            <th>
                手机号
            </th>
            <th>
                是否启用
            </th>
            <th>
                职称
            </th>
            <th>
                性别
            </th>
            <th>
                签名
            </th>
            <th>
                信息
            </th>
            <th>
                图片
            </th>
            <th></th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Enterprise.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.TableImg(item.Avatar.SplitToArray<string>()[0])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.WeChatCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @(item.Enable?"启动":"关闭")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @item.Gender.GetDisplayName()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.TableImg(item.Images.SplitToArray<string>()[0])
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.ID }) |
                @Html.ActionLink("删除", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
